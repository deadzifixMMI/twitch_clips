<h1>Clips de tout le monde</h1>

<%= link_to "Mes clips", my_clips_path, class: "btn btn-primary" %>

<ul>
  <% @clips.each do |clip| %>
    <li>
      <h2><%= clip.title %></h2>

      <% if clip.video.attached? %>
        <video width="560" height="315" controls>
          <source src="<%= url_for(clip.video) %>" type="video/mp4">
          Ton navigateur ne supporte pas la vidéo.
        </video>
      <% else %>
        <p>Aucune vidéo disponible.</p>
      <% end %>

      <p>Ajouté par <%= clip.user.email %></p>
    </li>
  <% end %>
</ul>
