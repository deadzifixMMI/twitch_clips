<h1>Mes Clips</h1>

<%= link_to "Ajouter un clip", new_clip_path, class: "btn btn-success" %>

<ul>
  <% @clips.each do |clip| %>
    <li>
      <h2><%= clip.title %></h2>

      <% if clip.video.attached? %>
        <video width="560" height="315" controls>
          <source src="<%= url_for(clip.video) %>" type="video/mp4">
          Ton navigateur ne supporte pas la vidéo.
        </video>
      <% else %>
        <p>Aucune vidéo disponible.</p>
      <% end %>

      <br>
      <%= link_to "Modifier", edit_clip_path(clip), class: "btn btn-warning" %>
      <%= link_to "Supprimer", clip_path(clip), method: :delete, data: { confirm: "Es-tu sûr ?" }, class: "btn btn-danger" %>
    </li>
  <% end %>
</ul>

<%= link_to "Retour", clips_path, class: "btn btn-secondary" %>
