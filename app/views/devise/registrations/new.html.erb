<h2 class="text-center mb-4">Inscription</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <%= f.error_notification class: "alert alert-danger" %>

  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, required: true, autofocus: true, class: "form-control", input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-group">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, required: true, class: "form-control", input_html: { autocomplete: "new-password" } %>
    <small class="form-text text-muted">
      <%= "#{@minimum_password_length} characters minimum" if @minimum_password_length %>
    </small>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, required: true, class: "form-control", input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-group text-center">
    <%= f.button :submit, "S'enregistrer", class: "btn btn-twitch custom-btn btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
